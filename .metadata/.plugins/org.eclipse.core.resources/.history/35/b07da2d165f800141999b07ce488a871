package bingo;

import java.util.Collection;
import java.util.HashSet;

import bingo.interfaces.Card;
import bingo.interfaces.Caller;
import bingo.interfaces.CardFactory;
import bingo.utils.CardPrinter;

public class Main {

	private static final CardPrinter PRINTER = new CardPrinter();
	private static final boolean WITH_COVERS = true;
	
	public static void main(String[] args) {
		CardFactory cardFactory = new RandomCardFactory();
		
		Collection<Card> cardsInPlay = new HashSet<Card>();
		Card c = cardFactory.createCard();
		cardsInPlay.add(c);
		PRINTER.print(c, WITH_COVERS);
		
		Caller caller = new RandomCaller();
		for (int i = 0; i < 20; i++) {
			int number = caller.nextNumber();
			System.out.println("--------------");
			System.out.println(number);
			for (Card card : cardsInPlay) {
				card.coverSpace(number);
			}
			PRINTER.print(c, WITH_COVERS);
		}
	}
	
}
