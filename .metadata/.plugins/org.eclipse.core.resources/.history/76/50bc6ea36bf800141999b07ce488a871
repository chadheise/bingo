package bingo;

import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStream;

import bingo.checkers.BlackoutChecker;
import bingo.interfaces.Caller;
import bingo.interfaces.CardChecker;
import bingo.interfaces.CardFactory;
import bingo.interfaces.Simulation;
import bingo.simulations.BasicSimulation;

public class Main {

	public static final int NUM_SIMULATIONS = 100000;
	public static final String FILE_NAME_PREFIX = "/Users/chadheise/Documents/programming/bingo/results/simulation_";
	public static final String FILE_EXTENSION = ".csv";
	
	public static void main(String[] args) throws IOException {
		CardFactory cardFactory = new RandomCardFactory();
		CardChecker checker = new BlackoutChecker();
		
		// For each number of players
		for (int numPlayers=1; numPlayers<=5; numPlayers++) {
			// Run simulations
			OutputStream outputStream = new FileOutputStream(FILE_NAME_PREFIX + numPlayers + FILE_EXTENSION);
			
			int totalCalls = 0;
			for (int i=0; i < NUM_SIMULATIONS; i++) {
				Caller caller = new RandomCaller();
				Simulation simulation = new BasicSimulation(30, cardFactory, caller, checker);
				int callsBeforeWinner = simulation.run();
				String outputLine = numPlayers + "," + callsBeforeWinner;
				outputStream.write(outputLine.getBytes());
				//System.out.println(numPlayers + "," + callsBeforeWinner);
				totalCalls += callsBeforeWinner;
			}
			System.out.println("Done with simulation " + numPlayers);
			//double averageCallsBeforeWinner = (double) totalCalls / (double) NUM_SIMULATIONS;
			//System.out.println(numPlayers + "," + averageCallsBeforeWinner);
		}

	}
	
}
