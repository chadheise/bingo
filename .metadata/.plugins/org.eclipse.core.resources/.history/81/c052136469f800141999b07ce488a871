package bingo;

import bingo.checkers.BlackoutChecker;
import bingo.interfaces.Caller;
import bingo.interfaces.CardChecker;
import bingo.interfaces.CardFactory;
import bingo.interfaces.Simulation;
import bingo.simulations.BasicSimulation;

public class Main {

	public static final int NUM_SIMULATIONS = 100;
	
	public static void main(String[] args) {
		CardFactory cardFactory = new RandomCardFactory();
		Caller caller = new RandomCaller();
		CardChecker checker = new BlackoutChecker();
		
		// For each number of players
		for (int numPlayers=1; numPlayers<=100; numPlayers++) {
			// Run simulations
			int totalCalls;
			for (int i=0; i < NUM_SIMULATIONS; i++) {
				Simulation simulation = new BasicSimulation(30, cardFactory, caller, checker);
				totalCalls += simulation.run();
			}
			double averageCallsBeforeWinner = (double) totalCalls / (double) NUM_SIMULATIONS;
			System.out.println(numPlayers + "," + averageCallsBeforeWinner);
		}

	}
	
}
