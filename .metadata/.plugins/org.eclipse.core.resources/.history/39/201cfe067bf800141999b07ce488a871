package bingo.utils;

import bingo.Letter;
import bingo.interfaces.Card;

public class CardPrinter {

	public void print(Card card) {
		System.out.println(" B  I  N  G  O ");
		for (int i = 0; i < card.numRows(); i++) {
			System.out.println(getRow(card, withCovers, i));
		}
	}
	
	private String getRow(Card card, int row) {
		StringBuilder builder = new StringBuilder();
		for (Letter letter : Letter.values()) { 
			if (!withCovers || !card.getSpace(letter, row).isCovered()) {
				builder.append(card.getSpace(letter, row));
				builder.append(" ");
			}
			else {
				builder.append(" X ");
			}

		}
		return builder.toString();
	}
	
}
